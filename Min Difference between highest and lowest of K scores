/**
 * @param {number[]} nums
 * @param {number} k
 * @return {number}
 */
var minimumDifference = function(nums, k) {
    // If we only need to pick 1 student, the difference is always 0
    if (k === 1) return 0;

    // Step 1: Sort the scores numerically
    nums.sort((a, b) => a - b);

    let minDiff = Infinity;

    // Step 2: Slide a window of size k across the array
    for (let i = 0; i <= nums.length - k; i++) {
        // The difference between the highest (end of window) 
        // and lowest (start of window)
        let currentDiff = nums[i + k - 1] - nums[i];
        
        // Step 3: Update the global minimum difference
        if (currentDiff < minDiff) {
            minDiff = currentDiff;
        }
    }

    return minDiff;
};
