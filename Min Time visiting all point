class Solution:
    def minTimeToVisitAllPoints(self, points: list[list[int]]) -> int:
        total_time = 0
        
        # Iterate through the points to calculate time between consecutive pairs
        for i in range(len(points) - 1):
            p1 = points[i]
            p2 = points[i + 1]
            
            # The time to move between two points is the maximum of 
            # the horizontal distance and the vertical distance.
            dx = abs(p2[0] - p1[0])
            dy = abs(p2[1] - p1[1])
            
            total_time += max(dx, dy)
            
        return total_time
